    #sp-slt-{{ section.id }} .sp-slt-grid {
      display: block;
    }
  }

  @media only screen and (max-width: 900px) {
    #sp-slt-{{ section.id }} .sp-slt-column {
      padding: 5px 0;
    }
  }

