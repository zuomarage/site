}

.pw-section__{{sec_id}} {
  --pw-gutter-x: 25px;
  color: {{section.settings.text_color}};
  background-color: {{section.settings.background_color}};
  {% if section.settings.section_height == true %}
    min-height: 100vh;
  {% endif %}
  padding-top: {{section.settings.section_padding_top}}px;
  padding-bottom: {{section.settings.section_padding_bottom}}px;
  display: flex;
  align-items: center;
  line-height: 1.5;
}

.pw-section__{{sec_id}} .pw-section-title::before,
.pw-section__{{sec_id}} .pw-section-title::after {
  display: none;
}

.pw-section__{{sec_id}} .pw-section-title {
  color: {{section.settings.text_color}};
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 30px;
  position: relative;
  max-width: 550px;
  line-height: 1.2;
  text-align: left;
}

.pw-section__{{sec_id}} .pw-section-subtitle {
  color: {{section.settings.text_color}};
  margin-top: 0;
  margin-bottom: 30px;
  padding-bottom: 20px;
  position: relative;
  font-weight: 700;
  text-transform: uppercase;
}

.pw-section__{{sec_id}} .pw-section-subtitle::before {
  content: '';
  position: absolute;
  top: 100%;
  left: 0;
  width: 180px;
  height: 4px;
  background-color: {{section.settings.subtitle_underline_color}};
}

.pw-section__{{sec_id}} .pw-section-text {
  color: {{section.settings.text_color}};
  margin-bottom: 30px;
}

.pw-section__{{sec_id}} .pw-section-text p {
  margin-top: 0;
  color: {{section.settings.text_color}};
  opacity: 0.65;
}

.pw-section__{{sec_id}} .pw-partner {
  display: block;
  padding-top: {{section.settings.logo_ratio}};
  height: 0;
  position: relative;
  margin-bottom: 30px;
}

.pw-section__{{sec_id}} .pw-partner img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  -o-object-fit: contain;
     object-fit: contain;
}

.pw-align-items-center {
  align-items: center;
}

.pw-mb-30 {
  margin-bottom: 30px;
}

