{% if section.settings.custom_css != blank %}
  {%- style -%}
  {{section.settings.custom_css}}
  {%- endstyle -%}
{% endif %}

<div class="pw-section__{{sec_id}}">
  <div class="pw-container">
    <div class="pw-row pw-align-items-center">

      <div class="pw-col-lg-6 pw-mb-30">

        {% for block in section.blocks %}
          {% case block.type %}

            {% when 'heading' %}
              {% if block.settings.sub_heading_text != blank %}
                <p class="pw-section-subtitle" {{ block.shopify_attributes }}>{{ block.settings.sub_heading_text | escape }}</p>
              {% endif %}
              {% if block.settings.heading_text != blank %}
                <{{ block.settings.heading_tag }} class="pw-section-title" {{ block.shopify_attributes }}>
                {{ block.settings.heading_text | escape }}
                </{{ block.settings.heading_tag }}>
              {% endif %}

            {% when 'buttons' %}
              {% if block.settings.button_label_1 != blank %}
                <a href="{{block.settings.button_link_1}}" {{ block.shopify_attributes }} 
                   class="pw-btn {% if block.settings.button_is_rounded == true %} pw-btn-rounded {% endif %}" 
                   style="background-color: {{block.settings.btn_bg_1}}; color: {{block.settings.btn_color_1}}">
                  {{block.settings.button_label_1}}
                </a>
              {% endif %}

            {% when 'text' %}
              {% if block.settings.section_text != blank %}
                <div class="pw-section-text" {{ block.shopify_attributes }}>
                  {{ block.settings.section_text }}
                </div>
              {% endif %}

          {% endcase %}
        {% endfor %}

      </div>

      <div class="pw-col-lg-6 mb-30">
        <div class="pw-row">

          {% for block in section.blocks %}
            {% if block.type == 'partner' %}

              <div class="pw-col-md-4 pw-col-6" {{ block.shopify_attributes }}>
                {% if block.settings.partner_logo == blank %}
                  <div class="pw-partner placeholder"></div>
                {% else %}
                 {% if block.settings.partner_link == blank %}
                  <div class="pw-partner">
                    <img srcset="
                    {%- if block.settings.partner_logo >= 750 -%}{{ block.settings.partner_logo | img_url: '750x' }} 750w,{%- endif -%}"
                      src="{{ block.settings.partner_logo | img_url: '750x' }}"
                      alt="{{ block.settings.partner_logo.alt | escape }}"
                      sizes="(min-width: 750px) 750px"
                      width="100%"
                      height="100%"
                      loading="lazy"
                    >
                  </div>
                  {% else %}
                    <a href="{{block.settings.partner_link}}" class="pw-partner">
                      <img srcset="
                      {%- if block.settings.partner_logo >= 750 -%}{{ block.settings.partner_logo | img_url: '750x' }} 750w,{%- endif -%}"
                        src="{{ block.settings.partner_logo | img_url: '750x' }}"
                        alt="{{ block.settings.partner_logo.alt | escape }}"
                        sizes="(min-width: 750px) 750px"
                        width="100%"
                        height="100%"
                        loading="lazy"
                      >
                    </a>
                  {% endif %}
                {% endif %}
              </div>

            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


