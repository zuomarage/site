  © Sections Pro. You are free to use this section in your store. You may not redistribute this section in another Shopify app.
{% endcomment %}
<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-ims-icon-{{ section.id }}.sp-ims-icon-wrap p,
  #sp-ims-icon-{{ section.id }}.sp-ims-icon-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-ims-icon-{{ section.id }}.sp-ims-icon-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }

  #sp-ims-icon-{{ section.id }}.sp-ims-icon-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }


  #sp-ims-icon-{{ section.id }} .sp-ims-icon {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-ims-icon-{{ section.id }}  .sp-ims-icon .sp-ims-icon-grid {
    display: grid;
    gap: {{ section.settings.grid_gap}}px;
    position: relative;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    #sp-ims-icon-{{ section.id }} .sp-ims-icon .sp-ims-icon-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-ims-icon-{{ section.id }} .sp-ims-icon .sp-ims-icon-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-ims-icon-{{ section.id }} .sp-ims-icon-col {
    position: relative;
    padding: 0;
    overflow: hidden;
  }

  #sp-ims-icon-{{ section.id }} .sp-ims-icon-img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      transition: all 0.5s ease;
      margin-bottom: 5px;
    }

    #sp-ims-icon-{{ section.id }} .sp-ims-icon-col:hover .sp-ims-icon-img {
    transform: scale(1.05);
  }
  
  #sp-ims-icon-{{ section.id }} .sp-ims-icon-content {
    position: relative;
    z-index: 3;
    padding: 20px 10px;
    text-align: center;
  }

  #sp-ims-icon-{{ section.id }} .sp-ims-icon h2 {
    font-weight: bold;
    margin: 0 0 5px 0;
    padding: 0;
    color: {{section.settings.text_color}};
  }

  #sp-ims-icon-{{ section.id }} .sp-ims-icon p {
    margin: 0;
    padding: 0;
  }


  /* carousel */
  #sp-ims-icon-{{ section.id }} .sp-ims-icon-carousel-links {
    padding: 0;
}

  #sp-ims-icon-carousel-links-{{ section.id }} a {
      display: inline-block;
      background-color: {{ section.settings.highlight_color }};
      width: 12px;
      height: 12px;
      border-radius: 50%;
      text-indent: -9999px;
      padding: 0;
      margin: 0 2.5px; 
      cursor: pointer;
      opacity: 0.25;
  }

  #sp-ims-icon-carousel-links-{{ section.id }} a[active] {
      background-color: {{ section.settings.highlight_color }};
      opacity: 1;
  }

  #sp-ims-icon-carousel-links-{{ section.id }} {
    display: none;
  }

  @media only screen and (max-width: 800px) {
    #sp-ims-icon-carousel-links-{{ section.id }} {
      display: block;
      text-align: center;
    }
  }
</style>

<div id="sp-ims-icon-{{ section.id }}" class="sp-ims-icon-wrap">

<div class="sp-ims-icon">

  <div id="sp-ims-icon-carousel-{{ section.id }}" class="sp-ims-icon-grid">

    {% for block in section.blocks %}
      <div class="sp-ims-icon-col">
        <div class="sp-ims-icon-content">
          {% if block.settings.link %}
          <a href="{{ block.settings.link }}">
          {% endif %}
            <img class="sp-ims-icon-img" src="{{ block.settings.image | image_url: width: 2048 }}">
            <h2>{{ block.settings.headline }}</h2>
            <p>{{ block.settings.text }}</p>
          {% if block.settings.link %}
          </a>
          {% endif %}
        </div>
      </div>
      <!-- /.sp-ims-icon-col -->

      {% endfor %}

  </div>
  <!-- /.sp-ims-icon-grid -->

  <div id="sp-ims-icon-carousel-links-{{ section.id }}" class="sp-ims-icon-carousel-links">
    {% for block in section.blocks %}
      <a data-index="{{ forloop.index | minus: 1 }}"></a>
    {% endfor %}
  </div>
  
</div>
