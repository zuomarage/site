<style>
  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-upsell-{{ section.id }}.sp-upsell-wrap p,
  #sp-upsell-{{ section.id }}.sp-upsell-wrap label,
  #sp-upsell-{{ section.id }}.sp-upsell-wrap input {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    color: {{ section.settings.text_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0 0 15px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-upsell-{{ section.id }}.sp-upsell-wrap p:last-child {
    padding: 0;
  }

  #sp-upsell-{{ section.id }}.sp-upsell-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    color: {{ section.settings.headline_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0 0 5px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-upsell-{{ section.id }}.sp-upsell-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-upsell-{{ section.id }} .sp-upsell-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    position: relative;
    gap: {{ section.settings.grid_gap }}px;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    align-items: center;
  }

  @media only screen and (max-width: 900px) {
    #sp-upsell-{{ section.id }} .sp-upsell-grid {
      display: block;
    }
  }
  
  
  #sp-upsell-{{ section.id }} .sp-upsell-grid .sp-upsell-column img {
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    object-fit: cover;
    width: 100%;
    display: block;
    border-radius: 25px;
    box-shadow:
        0 1px 1px hsl(0deg 0% 0% / 0.075),
        0 2px 2px hsl(0deg 0% 0% / 0.075),
        0 4px 4px hsl(0deg 0% 0% / 0.075),
        0 8px 8px hsl(0deg 0% 0% / 0.075),
        0 16px 16px hsl(0deg 0% 0% / 0.075)
      ;
    transition: .25s all;
  }
  
  #sp-upsell-{{ section.id }} .sp-upsell-grid .sp-upsell-column img:hover {
    box-shadow:
        0 1px 1px hsl(0deg 0% 0% / 0.1),
        0 2px 2px hsl(0deg 0% 0% / 0.1),
        0 4px 4px hsl(0deg 0% 0% / 0.1),
        0 8px 8px hsl(0deg 0% 0% / 0.1),
        0 20px 20px hsl(0deg 0% 0% / 0.1)
      ;
    transform: scale(1.01);
  }

  @media only screen and (max-width: 900px) {
    #sp-upsell-{{ section.id }} .sp-upsell-grid .sp-upsell-column:last-child {
      padding-top: 20px;
    }
  }

  
  #sp-upsell-{{ section.id }} .sp-radio-button-group {
    margin-bottom: 10px;
  }

  #sp-upsell-{{ section.id }} .sp-radio-button-group input[type="radio"] {
    display: none;
  }

  #sp-upsell-{{ section.id }} .sp-radio-button-group label {
    display: inline-block;
    padding: 10px;
    margin: 0 5px 0 0;
    border: 1px solid #ddd;
    border-radius: 5px;
    cursor: pointer;
    min-width: 75px;
    text-align: center;
  }
  
  #sp-upsell-{{ section.id }} .sp-radio-button-group label:has(:checked) {
    background: {{ section.settings.highlight_color }};
    border: 1px solid {{ section.settings.highlight_color }};
    font-weight: bold;
    color: #fff;
  }

  #sp-upsell-{{ section.id }} .sp-number-group {
    margin-bottom: 10px;
  }
  
  #sp-upsell-{{ section.id }} input[type=number] {
    display: inline-block;
    padding: 10px 10px;
    margin: 0 5px 0 0;
    border: 1px solid #ddd;
    border-radius: 5px;
    max-width: 75px;
    text-align: center;
  }
  
  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit] {
    position: relative;
    display: inline-block;
    padding: 15px 25px;
    margin: 0 5px 0 0;
    border: none;
    border-radius: 5px;
    background-image: {{section.settings.button_background_color}};
    color: {{section.settings.button_text_color}};
    cursor: pointer;
  }

  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit] * {
    pointer-events: none;
  }

  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit] svg {
    position: absolute;
    top: 10px;
    right: 10px;
    height: 25px;
    width: 25px;
    opacity: 0;
  }

  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit][sp-loading],
  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit][sp-done] {
    padding-right: 50px;
  }

  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit][sp-loading] .sp-upsell-loading {
    opacity: 1;
  }

  #sp-upsell-{{ section.id }} .sp-button-group button[type=submit][sp-done] .sp-upsell-done {
    opacity: 1;
  }

</style>

