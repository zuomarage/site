{% if section.settings.enable_client_submit %}
<script>
  var saiSubmitButton = document.querySelector('.sp-upsell-form button[type=submit]');

  // handle click
  saiSubmitButton.addEventListener('click', (e) => {

    e.preventDefault();

    var variant = document.querySelector('.sp-upsell-form input[type=radio]:checked').value;
    var quantity = document.querySelector('.sp-upsell-form input[type=number]').value;

    // get button and variant
    let button = e.target,
        data = {
            items: [{
                id: variant,
                quantity: quantity
            }]
        };

    // add item to cart (via Ajax api)
    var xhr = new XMLHttpRequest()
    xhr.open('POST', "/cart/add", true)
    xhr.setRequestHeader('Content-Type', 'application/json')
    xhr.send(JSON.stringify(data))

    // set loading
    button.setAttribute('sp-loading', '');

    // add to cart
    xhr.onload = function () {
        if (xhr.status >= 200 && xhr.status < 400) {

            // remove loading, set done
            button.removeAttribute('sp-loading');
            button.setAttribute('sp-done', '');

            setTimeout(function () { button.removeAttribute('sp-done'); }, 2000);

            // success
            // console.log('success');
        }
        else {

            // remove loading
            button.removeAttribute('sp-loading');

            // success
            // console.log('error');
        }
    }
    // end xhr
  });
</script>
