<style>

  #sp-ac-image-grid-{{ section.id }}.sp-ac-image-grid-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-ac-image-grid-{{ section.id }} .sp-ac-image-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-ac-image-grid-{{ section.id }}  .sp-ac-image-grid .sp-ac-image-grid-grid {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .sp-ac-image-grid-col {
    flex: 1;
    position: relative;
    padding: 0;
    overflow: hidden;
    transition: .25s all ease;
    height: {{ section.settings.height }}px;
    padding: 0 {{ section.settings.gap }}px;
  }

  .sp-ac-image-grid-col:hover {
    flex-basis: 25vw;
  }

  .sp-ac-image-grid-img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all .5s;
    display: block;
  }

  .sp-ac-image-grid-col:hover {
    z-index: 3;
    transform: scale(1.02);
  }
  
  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-ac-image-grid-{{ section.id }}" class="sp-ac-image-grid-wrap">

<div class="sp-ac-image-grid">

  <div class="sp-ac-image-grid-grid">

    {% for block in section.blocks %}
      <div class="sp-ac-image-grid-col">
          {% if block.settings.link %}
          <a class="sp-ac-image-grid-cta" href="{{ block.settings.link }}">
            <img class="sp-ac-image-grid-img" src="{{ block.settings.image | image_url: width: 2048 }}">
          </a>
          {% else %}
            <img class="sp-ac-image-grid-img" src="{{ block.settings.image | image_url: width: 2048 }}">
          {% endif %}

      </div>
      <!-- /.sp-ac-image-grid-col -->

    {% endfor %}

  </div>
  <!-- /.sp-ac-image-grid-grid -->
  
</div>
<!-- /.sp-ac-image-grid -->

</div>
<!-- /.sp-ac-image-grid-wrap -->

