{% assign sec_id = section.id | slice: -8, 8  | replace: "-", "_" %}

{%- style -%}

.pw-container,
.pw-container-fluid {
  width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
  margin-right: auto;
  margin-left: auto;
}

@media (min-width: 576px) {
  .pw-container {
    max-width: 540px;
  }
}

@media (min-width: 750px) {
  .pw-container {
    max-width: 720px;
  }
}

@media (min-width: 992px) {
  .pw-container {
    max-width: 960px;
  }
}

@media (min-width: 1200px) {
  .pw-container {
    max-width: 1140px;
  }
}

@media (min-width: 1400px) {
  .pw-container {
    max-width: 1320px;
  }
}

.pw-btn, .rte a.pw-btn:not(.btn) {
  display: inline-block;
  text-decoration: none;
  text-align: center;
  background-color: #fff;
  border: none;
  border-radius: 0px;
  outline: none;
  color: #000;
  font-weight: 400;
  white-space: nowrap;
  text-transform: uppercase;
  padding: 20px 30px;
  line-height: 1;
  min-width: 225px;
  min-height: 44px;
  transition: all 0.25s;
  cursor: pointer;
  box-sizing: border-box;
  margin-right: 16px;
  margin-bottom: 10px;
  font-family: inherit;
}

.pw-section__{{sec_id}} .pw-btn:last-child {
  margin-right: 0;
}

.pw-btn:hover {
  text-decoration: none;
  opacity: 0.8;
}

.pw-btn::after {
  display: none !important;
}

.pw-btn:focus {
  outline: none;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
}

.pw-btn-rounded {
  border-radius: 50px;
}

@media only screen and (max-width: 749px) {
  .pw-btn, .rte a.pw-btn:not(.btn) {
    padding: 15px 25px;
    min-width: 180px;
  }
}

.pw-container,
.pw-container-fluid {
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

.pw-section__{{sec_id}} .pw-row {
  display: flex;
  flex-wrap: wrap;
  margin-right: calc(var(--pw-gutter-x, 15px) * -1);
  margin-left: calc(var(--pw-gutter-x, 15px) * -1);
}

.pw-section__{{sec_id}} .pw-row > * {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 100%;
  max-width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

@media (min-width: 992px) {
  .pw-section__{{sec_id}} .pw-col-lg-10 {
    flex: 0 0 auto;
    width: 83.33333333%;
  }
  .pw-section__{{sec_id}} .pw-offset-lg-1 {
    margin-left: 8.33333333%;
  }
}

.pw-section__{{sec_id}} {
  --pw-gutter-x: 25px;
  background-color: {{section.settings.background_color}};
  color: {{section.settings.text_color}};
  {% if section.settings.section_height == true %}
    min-height: 100vh;
  {% endif %}
  padding-top: {{section.settings.section_padding_top}}px;
  padding-bottom: {{section.settings.section_padding_bottom}}px;
  display: flex;
  align-items: center;
  line-height: 1.5;
}

.pw-section__{{sec_id}} .pw-section-inner {
  text-align: {{section.settings.text_align}};
}

.pw-section__{{sec_id}} .pw-section-title::before,
.pw-section__{{sec_id}} .pw-section-title::after {
  display: none;
}

.pw-section__{{sec_id}} .pw-section-title {
  color: {{section.settings.text_color}};
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 30px;
  line-height: 1.25;
  text-align: {{section.settings.text_align}};
}

.pw-section__{{sec_id}} .pw-divider {
  display: inline-block;
  width: 185px;
  height: 4px;
  background-color: var(--divider-color);
  margin: 0px auto 20px;
}

.pw-section__{{sec_id}} .pw-section-text p {
  color: {{section.settings.text_color}};
  margin-top: 0;
  max-width: 840px;
  display: inline-block;
}

.pw-section__{{sec_id}} .pw-section-btns {
  margin-top: 30px;
}

{% if section.settings.inherit_fonts == false %}
  .pw-section__{{sec_id}} h1.pw-section-title {
    font-size: 72px;
  }
  .pw-section__{{sec_id}} h2.pw-section-title {
    font-size: 56px;
  }
  .pw-section__{{sec_id}} h3.pw-section-title {
    font-size: 32px;
  }
  .pw-section__{{sec_id}} .pw-section-text p {
    font-size: 24px; margin-bottom: 24px;
  }
  .pw-btn, .rte a.pw-btn:not(.btn) {
    font-size: 18px;
  }
{% endif %}

@media only screen and (max-width: 749px) {
  .pw-section__{{sec_id}} {
    min-height: auto;
    padding-top: {{section.settings.section_padding_top_mobile}}px;
    padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
  }
  .pw-section__{{sec_id}} .pw-divider {
    width: 120px;
  }
  {% if section.settings.inherit_fonts == false %}
    .pw-section__{{sec_id}} h1.pw-section-title {
      font-size: 50px;
    }
    .pw-section__{{sec_id}} h2.pw-section-title {
      font-size: 40px;
    }
    .pw-section__{{sec_id}} h3.pw-section-title {
      font-size: 26px;
    }
    .pw-section__{{sec_id}} .pw-section-text p {
      font-size: 20px;
    }
    .pw-btn, .rte a.pw-btn:not(.btn) {
      font-size: 16px;
    }
  {% endif %}
}

{%- endstyle -%}

{% if section.settings.custom_css != blank %}
  {%- style -%}
  {{section.settings.custom_css}}
  {%- endstyle -%}
{% endif %}


<div class="pw-section__{{sec_id}}">
  <div class="pw-container">
    <div class="pw-row">
      <div class="pw-col-lg-10 pw-offset-lg-1">
        <div class="pw-section-inner">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'heading' %}
              {% if block.settings.heading_text != blank %}
                <{{ block.settings.heading_tag }} class="pw-section-title" {{ block.shopify_attributes }}>
                {{ block.settings.heading_text | escape }}
                </{{ block.settings.heading_tag }}>
              {% endif %}

              {% when 'divider' %}
              <span class="pw-divider" style="--divider-color: {{block.settings.divider_color}}" {{ block.shopify_attributes }}></span>

              {% when 'text' %}
              {% if block.settings.section_text != blank %}
                <div class="pw-section-text" {{ block.shopify_attributes }}>
                  {{ block.settings.section_text }}
                </div>
              {% endif %}

              {% when 'buttons' %}
              <div class="pw-section-btns" {{ block.shopify_attributes }}>
                {% if block.settings.button_label_1 != blank %}
                  <a href="{{block.settings.button_link_1}}" 
                     class="pw-btn {% if block.settings.button_is_rounded_1 == true %} pw-btn-rounded {% endif %}" 
                     style="background-color: {{block.settings.btn_bg_1}}; color: {{block.settings.btn_color_1}};">
                    {{block.settings.button_label_1}}
                  </a>
                {% endif %}
              </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


