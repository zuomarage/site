<style>
  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-price-{{ section.id }}.sp-price-wrap p,
  #sp-price-{{ section.id }}.sp-price-wrap p a,
  #sp-price-{{ section.id }}.sp-price-wrap li {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
    color: {{section.settings.text_color}};
  }

  #sp-price-{{ section.id }}.sp-price-wrap h2,  #sp-price-{{ section.id }}.sp-price-wrap h3 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
    font-weight: bold;
    color: {{section.settings.headline_color}};
  }

  #sp-price-{{ section.id }}.sp-price-wrap h3 {
    font-size: {{ section.settings.price_size }}px;
    color: {{section.settings.price_color}};
  }

  #sp-price-{{ section.id }}.sp-price-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-price-{{ section.id }} .sp-price {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-price-{{ section.id }} .sp-price .sp-price-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    #sp-price-{{ section.id }} .sp-price .sp-price-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
    }
  }

  @media only screen and (max-width: 800px) {
      #sp-price-{{ section.id }} .sp-price .sp-price-grid {
      display: grid;
      grid-template-columns: 1fr;
    }
  }

  #sp-price-{{ section.id }} .sp-price-col {
    box-sizing: border-box;
    position: relative;
    margin: 0;
    padding: 0 0 75px 0;
    overflow: hidden;
    border-radius: 5px;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
    transition: .25s all ease;
    margin: 10px 0;
  }

  #sp-price-{{ section.id }} .sp-price-col-highlighted {
    box-shadow: 0 0 10px 0 rgba(0,0,0,0.5);
    margin: 0;
  }

  @media only screen and (max-width: 800px) {
      #sp-price-{{ section.id }} .sp-price-col-highlighted {
      margin: 0;
    }
  }



  #sp-price-{{ section.id }} .sp-price-col h2 {
    margin: 0;
    text-align: center;
    padding: 20px 20px 10px 20px;
    text-transform: uppercase;
  }

  #sp-price-{{ section.id }} .sp-price-col p {
    margin: 0;
    text-align: center;
    padding: 0 20px 25px 20px;
  }

  #sp-price-{{ section.id }} .sp-price-col ul {
    margin: 0 20px 0 30px;
    text-align: left;
    padding: 0 20px 15px 0;
    list-style: none;
  }

  #sp-price-{{ section.id }} .sp-price-col h3 {
    margin: 0;
    text-align: center;
    padding: 0 20px 20px 20px;
  }

  #sp-price-{{ section.id }} .sp-price-col li {
    margin: 0;
    padding: 0 0 10px 0;
    text-align: center;
  }

  #sp-price-{{ section.id }} .sp-price-col li svg {
    transform: translateY(7px);
    margin-right: 5px;
    fill: #888;
  }

  #sp-price-{{ section.id }} .sp-price-col-highlighted li svg {
      fill: {{ section.settings.highlight_color }};
  }

  #sp-price-{{ section.id }} .sp-price-col li:last-child {
    margin: 0;
    padding: 0;
  }

  #sp-price-{{ section.id }} a.sp-price-cta {
    position: absolute;
    bottom: 20px;
    width: calc(100% - 40px);
    display: block;
    padding: 10px 10px;
    margin: 0 20px;
    background-image: {{section.settings.button_background_color}};
    border-radius: 5px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    font-weight: bold;
    text-shadow: none;
    transition: .25s all;
    text-align: center;
    box-sizing: border-box;
  }

  #sp-price-{{ section.id }} .sp-price-col-highlighted a.sp-price-cta {
    background-image: {{section.settings.highlighted_button_background_color}};
    color: {{section.settings.highlighted_button_text_color}};
  }

  @media only screen and (max-width: 800px) {

  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-price-{{ section.id }}" class="sp-price-wrap">
  <div class="sp-price">
    <div class="sp-price-grid">
      {% for block in section.blocks %}
        <div class="sp-price-col{% if block.settings.highlighted %} sp-price-col-highlighted{% endif %}">
          <h2>{{ block.settings.title }}</h2>

          <h3>{{ block.settings.price }}</h3>

          <p>{{ block.settings.description }}</p>

          {% if block.settings.cta != '' %}
            <a class="sp-price-cta" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a>
          {% endif %}

          <ul>
            {% if block.settings.feature_1 != '' %}
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                  <path d="M382-240 154-468l57-57 171 171 367-367 57 57-424 424Z"/>
                </svg>
                {{ block.settings.feature_1 }}
              </li>
            {% endif %}
            {% if block.settings.feature_2 != '' %}
