<style>

  #sp-marquee-{{ section.id }}.sp-marquee-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }


  #sp-marquee-{{ section.id }} .sp-marquee {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    overflow: hidden;
  }

  #sp-marquee-{{ section.id }}  .sp-marquee .sp-marquee-container {
    height: 100%;
    width: fit-content;
    align-items: center;
    display: flex;
    position: relative;
    animation: marquee {{ section.settings.slideshow_speed }} linear infinite;
    will-change: transform;
  }

  #sp-marquee-{{ section.id }} .sp-marquee-item {
    display: inline-block;
  }
  
  #sp-marquee-{{ section.id }} .sp-marquee-img {
    display: inline-block;
    position: relative;
    height: 250px;
    object-fit: cover;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    transition: all .5s;
  }

  #sp-marquee-{{ section.id }} .sp-marquee-col:hover {
    z-index: 3;
    transform: scale(1.02);
  }
  
  @media only screen and (max-width: 800px) {

  }

  @keyframes marquee {
    to {
      transform: translateX(-50%);
    }
  }
</style>

<div id="sp-marquee-{{ section.id }}" class="sp-marquee-wrap">

<div class="sp-marquee">

  <div class="sp-marquee-container">

    {% for block in section.blocks %}
      <div class="sp-marquee-item">
          {% if block.settings.link %}
          <a class="sp-marquee-cta" href="{{ block.settings.link }}">
            <img class="sp-marquee-img" src="{{ block.settings.image | image_url: width: 2048 }}">
          </a>
          {% else %}
            <img class="sp-marquee-img" src="{{ block.settings.image | image_url: width: 2048 }}">
          {% endif %}
      </div>
      <!-- /.sp-marquee-col -->

    {% endfor %}

    {% for block in section.blocks %}
      <div class="sp-marquee-item">
          {% if block.settings.link %}
          <a class="sp-marquee-cta" href="{{ block.settings.link }}">
            <img class="sp-marquee-img" src="{{ block.settings.image | image_url: width: 2048 }}">
          </a>
          {% else %}
            <img class="sp-marquee-img" src="{{ block.settings.image | image_url: width: 2048 }}">
          {% endif %}
      </div>
      <!-- /.sp-marquee-col -->

    {% endfor %}

  </div>
  <!-- /.sp-marquee-grid -->
  
</div>
<!-- /.sp-marquee -->

</div>
<!-- /.sp-marquee-wrap -->

