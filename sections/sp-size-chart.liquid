<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-sizechart-{{ section.id }}.sp-size-chart-wrap p,
  #sp-sizechart-{{ section.id }}.sp-size-chart-wrap th,
  #sp-sizechart-{{ section.id }}.sp-size-chart-wrap td,
  #sp-sizechart-{{ section.id }}.sp-size-chart-wrap a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-sizechart-{{ section.id }}.sp-size-chart-wrap {
    background-image: {{section.settings.background_color}};
    width: 100%;
  }
  
  #sp-sizechart-{{ section.id }} .sp-size-chart {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-sizechart-{{ section.id }} .sp-size-chart h2 {
    text-align: center;
    color: {{ section.settings.text_color }};
    font-weight: bold;
    max-width: 1000px;
    margin: 0 auto 25px auto;
    padding: 0;
  }

  #sp-sizechart-{{ section.id }}  .sp-size-chart .sp-size-chart-grid {
    position: relative;
    margin: 0 auto;
    display: block;
    max-width: 1000px;
  }

  #sp-sizechart-{{ section.id }} .sp-size-chart-col {
    width: 100%;
    overflow: auto;
  }

  #sp-sizechart-{{ section.id }}  .sp-size-chart table {
    width: 100%;
    border-collapse: collapse;
  }

  @media only screen and (max-width: 800px) {
    #sp-sizechart-{{ section.id }}  .sp-size-chart table {
      width: auto;
    }
  }

  #sp-sizechart-{{ section.id }} .sp-size-chart table td,
  #sp-sizechart-{{ section.id }} .sp-size-chart table th {
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.table_padding }}px;
  }

  @media only screen and (max-width: 800px) {
    #sp-sizechart-{{ section.id }} .sp-size-chart table td,
    #sp-sizechart-{{ section.id }} .sp-size-chart table th {
      white-space: nowrap;
    }
  }

  #sp-sizechart-{{ section.id }} .sp-size-chart table thead th {
    font-weight: bold;
    text-align: center;
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  #sp-sizechart-{{ section.id }} .sp-size-chart table thead th:first-child {
    text-align: left;
    border-right: 1px solid {{ section.settings.border_color }};
  }

  #sp-sizechart-{{ section.id }} .sp-size-chart table tbody th {
    text-align: left;
    border-right: 1px solid {{ section.settings.border_color }};
  }

  #sp-sizechart-{{ section.id }}  .sp-size-chart table tbody td {
    text-align: center;
  }


  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-sizechart-{{ section.id }}" class="sp-size-chart-wrap">

  <div class="sp-size-chart">

  <div class="sp-size-chart-grid">
    <div class="sp-size-chart-col">

      <table id="sp-size-chart-{{ section.id }}" class="sp-size-chart-table">
        <thead>
          <tr>
            <th>Size</th>
            <th>XS</th>
            <th>S</th>
            <th>M</th>
            <th>L</th>
            <th>XL</th>
          </tr>
        </thead>
        <tbody>
        {% for block in section.blocks %}
          <tr>
            <th>{{block.settings.label}}</th>
            <td>{{block.settings.xs}}</td>
            <td>{{block.settings.s}}</td>
            <td>{{block.settings.m}}</td>
            <td>{{block.settings.l}}</td>
            <td>{{block.settings.xl}}</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    
    </div>
    <!-- /.sp-size-chart-col -->
  </div>
  <!-- /.sp-size-chart-container -->

  </div>
  <!-- /.sp-size-chart -->
  
</div>
<!-- /.sp-size-chart-wrap -->

