<style>
  {{ section.settings.text_font | font_face }}
  {{ section.settings.timer_font | font_face }}

  #sp-counts-{{ section.id }} p,
  #sp-counts-{{ section.id }} p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    color: {{ section.settings.text_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-counts-{{ section.id }}.sp-counts-wrap {
    background-image: {{ section.settings.background_color }};
  }

  #sp-counts-{{ section.id }} .sp-counts {
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-counts-{{ section.id }} h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    padding: 0;
    color: {{ section.settings.headline_color }};
    text-align: {{ section.settings.headline_alignment }};
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-counts-{{ section.id }} p {
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

    #sp-counts-{{ section.id }} .sp-counts-grid {
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      max-width: 1000px;
      gap: 20px;
    }

    @media only screen and (max-width: 800px) {
      #sp-counts-{{ section.id }} .sp-counts-grid {
        grid-template-columns: 1fr;
        margin: 0 10px;
      }
    }

    #sp-counts-{{ section.id }} .sp-counts-col h3 {
      font-size: {{ section.settings.count_size }}px;
      font-family: {{ section.settings.count_font.family }}, {{ section.settings.count_font.fallback_families }};
      font-weight: bold;
      color: {{ section.settings.count_color }};
      padding: 0;
      margin: 0 0 10px 0;
      text-align: {{ section.settings.count_alignment }};
    }

    #sp-counts-{{ section.id }} .sp-counts-col p {
      padding: 0;
      margin: 0;
      color: {{ section.settings.count_color }};
      text-align: {{ section.settings.count_alignment }};
    }

    @media only screen and (max-width: 800px) {

    }
</style>

