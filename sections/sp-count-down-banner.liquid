<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.timer_font | font_face }}

  #sp-cdbanner-{{ section.id }}.sp-cdbanner-wrapper {
    background-image: {{ section.settings.background_color }};
  }

  #sp-cdbanner-{{ section.id }} .sp-headline {
    {% if section.settings.icon != 'none' %}
    display: grid;
    grid-template-columns: {{ section.settings.icon_size }}px 1fr;
    gap: 10px;
    align-items: center;
    {% endif %}
  }

  #sp-cdbanner-{{ section.id }} .sp-headline p,
  #sp-cdbanner-{{ section.id }} .sp-headline p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    color: {{ section.settings.text_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner-icon {
    fill: {{ section.settings.icon_color }};
    margin-right: 5px;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner {
    display: grid;
    grid-template-columns: 3fr 1fr;
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    align-items: center;
    gap: 10px;
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner-grid {
    display: grid;
    grid-template-columns: 1fr 15px 1fr 15px 1fr 15px 1fr;
    gap: 1px;
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner-grid-item {
    position: relative;
    background-image: {{ section.settings.countdown_background_color }};
    padding: 5px;
    text-align: center;
    border-radius: 5px;
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner-tick {
    color: {{ section.settings.text_color }};
    font-size: 18px;
    font-weight: bold;
    display: block;
    text-align: center;
    width: 15px;
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner-timer-container {
    text-align: center;
  }

  #sp-cdbanner-{{ section.id }} .sp-cdbanner-timer {
    font-family: {{ section.settings.timer_font.family }}, {{ section.settings.timer_font.fallback_families }};
    font-weight: {{ section.settings.timer_font.weight }};
    font-size: {{ section.settings.timer_size }}px;
    font-weight: bold;
    color: {{ section.settings.timer_color }};
  }
</style>

