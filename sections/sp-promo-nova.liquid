 {% assign sec_id = section.id | slice: -8, 8  | replace: "-", "_" %}

{%- style -%}

.pw-container,
.pw-container-fluid {
  width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
  margin-right: auto;
  margin-left: auto;
}

@media (min-width: 576px) {
  .pw-container {
    max-width: 540px;
  }
}

@media (min-width: 750px) {
  .pw-container {
    max-width: 720px;
  }
}

@media (min-width: 992px) {
  .pw-container {
    max-width: 960px;
  }
}

@media (min-width: 1200px) {
  .pw-container {
    max-width: 1140px;
  }
}

@media (min-width: 1400px) {
  .pw-container {
    max-width: 1320px;
  }
}

.pw-container,
.pw-container-fluid {
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

.pw-section__{{sec_id}} {
  --pw-gutter-x: 25px;
  background-color: {{section.settings.background_color}};
  color: {{section.settings.text_color}};
  {% if section.settings.section_height == true %}
    min-height: 100vh;
  {% endif %}
  padding-top: {{section.settings.section_padding_top}}px;
  padding-bottom: {{section.settings.section_padding_bottom}}px;
  display: flex;
  align-items: center;
  line-height: 1.5;
}

.pw-section__{{sec_id}} .pw-section-inner {
  position: relative;
  text-align: center;
  max-width: 825px;
  margin-left: auto;
  margin-right: auto;
}

.pw-section__{{sec_id}} .pw-section-title {
  color: {{section.settings.text_color}};
  font-weight: 700;
  margin-top: 60px;
  margin-bottom: 60px;
  position: relative;
}

.pw-section__{{sec_id}} .pw-section-title::before,
.pw-section__{{sec_id}} .pw-section-title::after {
  content: '';
  position: absolute;
  width: 180px;
  height: 2px;
  left: 50%;
  margin-left: -90px;
  background-color: {{section.settings.divider_color}};
  {% if section.settings.alter_divider == true %}
  width: 104px;
  height: 19px;
  margin-left: -52px;
  background: transparent url("data:image/svg+xml,%3Csvg width='104' height='19' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='m2 3 12.155 12.155L26.309 3l12.155 12.155L50.62 3l12.154 12.155L74.928 3l13.536 13.536L102 3' stroke='{{section.settings.divider_color | replace: '#', '%23'}}' stroke-width='3'/%3E%3C/svg%3E") no-repeat center/contain;
  {% endif %}
}

.pw-section__{{sec_id}} .pw-section-title::before {
  top: -60px;
}

.pw-section__{{sec_id}} .pw-section-title::after {
  bottom: -60px;
}

{% if section.settings.inherit_fonts == false %}
  .pw-section__{{sec_id}} h1.pw-section-title {
    font-size: 72px;
  }
  .pw-section__{{sec_id}} h2.pw-section-title {
    font-size: 56px;
  }
  .pw-section__{{sec_id}} h3.pw-section-title {
    font-size: 32px;
  }
  .pw-section__{{sec_id}} h4.pw-section-title {
    font-size: 30px;
    font-weight: 600;
  }
  .pw-section__{{sec_id}} h5.pw-section-title {
    font-size: 28px;
    font-weight: 700;
  }
{% endif %}

@media only screen and (max-width: 749px) {
  .pw-section__{{sec_id}} {
    min-height: auto;
    padding-top: {{section.settings.section_padding_top_mobile}}px;
    padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
  }
  .pw-section__{{sec_id}} .pw-section-title {
    margin-top: 50px;
    margin-bottom: 50px;
  }
  .pw-section__{{sec_id}} .pw-section-title::before {
    top: -50px;
  }
  .pw-section__{{sec_id}} .pw-section-title::after {
    bottom: -50px;
  }
  {% if section.settings.inherit_fonts == false %}
    .pw-section__{{sec_id}} h1.pw-section-title {
      font-size: 50px;
    }
    .pw-section__{{sec_id}} h2.pw-section-title {
      font-size: 40px;
    }
    .pw-section__{{sec_id}} h3.pw-section-title {
      font-size: 26px;
    }
    .pw-section__{{sec_id}} h4.pw-section-title {
      font-size: 24px;
    }
    .pw-section__{{sec_id}} h5.pw-section-title {
      font-size: 22px;
    }
  {% endif %}
}

{%- endstyle -%}

{% if section.settings.custom_css != blank %}
  {%- style -%}
  {{section.settings.custom_css}}
  {%- endstyle -%}
{% endif %}

<div class="pw-section__{{sec_id}}">
  <div class="pw-container">
    <div class="pw-section-inner">
      {% if section.settings.heading_text != blank %}
        <{{ section.settings.heading_tag }} class="pw-section-title">
        {{ section.settings.heading_text | escape }}
        </{{ section.settings.heading_tag }}>
      {% endif %}
    </div>
  </div>
</div>


