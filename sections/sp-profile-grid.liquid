<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-profile-{{ section.id }}.sp-profile-wrap p,
  #sp-profile-{{ section.id }}.sp-profile-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-profile-{{ section.id }}.sp-profile-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }
  
  #sp-profile-{{ section.id }}.sp-profile-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-profile-{{ section.id }} .sp-profile {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-profile-{{ section.id }} .sp-profile .sp-profile-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
    align-items: center;
    justify-content: center;
    align-content: start;
  }

  @media only screen and (min-width: 801px) {
    #sp-profile-{{ section.id }} .sp-profile .sp-profile-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-profile-{{ section.id }} .sp-profile .sp-profile-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-profile-{{ section.id }} .sp-profile-col {
    position: relative;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  #sp-profile-{{ section.id }} .sp-profile-img {
    display: inline-block;
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-profile-{{ section.id }} .sp-profile-content {
    position: relative;
    z-index: 3;
    padding: 0;
    margin: 0;
    text-align: center;
  }

  #sp-profile-{{ section.id }} .sp-profile h2 {
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    text-align: center;
  }

  #sp-profile-{{ section.id }} .sp-profile p {
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
    text-align: center;
  }

  #sp-profile-{{ section.id }} .sp-profile p:last-child {
    margin: 0;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-profile-{{ section.id }}" class="sp-profile-wrap">

<div class="sp-profile">

  <div class="sp-profile-grid">

    {% for block in section.blocks %}
      <div class="sp-profile-col">
        <div class="sp-profile-content">
          <img class="sp-profile-img" src="{{ block.settings.image | image_url: width: 500 }}">
          <h2 class="sp-profile-name">{{ block.settings.name }}</h2>
          <p class="sp-profile-role">{{ block.settings.role }}</p>
          <p class="sp-profile-background">{{ block.settings.background }}</p>
        </div>
      </div>
      <!-- /.sp-profile-col -->

      {% endfor %}

  </div>
  <!-- /.sp-profile-grid -->
  
</div>
<!-- /.sp-profile -->

</div>
<!-- /.sp-profile-wrap -->

