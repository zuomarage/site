<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-rc-{{ section.id }}.sp-rc-wrap p,
  #sp-rc-{{ section.id }} .sp-rc-col .sp-rc-count,
  #sp-rc-{{ section.id }}.sp-rc-wrap p a {
    font-size: {{ section.settings.text_size_1 }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
    color: {{ section.settings.text_color }};
  }

  #sp-rc-{{ section.id }}.sp-rc-wrap h2, 
  #sp-rc-{{ section.id }}.sp-rc-wrap h3 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
    color: {{ section.settings.headline_color }};
  }
  
  #sp-rc-{{ section.id }}.sp-rc-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-rc-{{ section.id }} .sp-rc {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-rc-{{ section.id }} .sp-rc-grid {
    display: grid;
    grid-template-columns: 1.75fr 1fr 1fr;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
    align-items: start;
    justify-content: start;
    align-content: start;
  }

  @media only screen and (min-width: 801px) {
    #sp-rc-{{ section.id }} .sp-rc-grid {
      display: grid;
      grid-template-columns: 1.75fr 1fr 1fr;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-rc-{{ section.id }} .sp-rc-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-rc-{{ section.id }} .sp-rc-col {
    position: relative;
    z-index: 3;
    padding: 20px 10px;
    display: grid;
    justify-content: start;
    align-content: start;
  }

  #sp-rc-{{ section.id }} .sp-rc-col h2 {
    margin: 0;
    padding: 0;
  }

  #sp-rc-{{ section.id }} .sp-rc-col h4 {
    margin: 0 0 5px 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr 2.5fr;
  }

  #sp-rc-{{ section.id }} .sp-rc-col svg, 
  #sp-rc-{{ section.id }} .sp-rc-col svg g {
      fill: {{ section.settings.highlight_color }};
  }

  #sp-rc-{{ section.id }} .sp-rc-col .sp-rc-count {
    font-size: {{ section.settings.text_size_1 }}px;
    color: {{ section.settings.text_color }};
  }

  #sp-rc-{{ section.id }} .sp-rc-col h3 {
    font-size: {{ section.settings.text_size_2 }}px;
    color: {{ section.settings.text_color }};
    margin: 0 0 5px 0;
    padding: 0;
  }

  #sp-rc-{{ section.id }} .sp-rc-col p {
    font-size: {{ section.settings.text_size_3 }}px;
    color: {{ section.settings.text_color }};
    margin: 0;
    padding: 0;
  }
  

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-rc-{{ section.id }}" class="sp-rc-wrap">

<div class="sp-rc">

  <div class="sp-rc-grid">

    <div class="sp-rc-col">
      <h4>
        <svg width="101px" height="20px" viewBox="0 0 101 20" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
