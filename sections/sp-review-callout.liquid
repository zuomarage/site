        </svg>
        <span class="sp-rc-count">{{ section.settings.review_count }}</span>
      </h4>
      <h2>{{ section.settings.headline }}</h2>
    </div>
    <!-- /sp-rc-col -->

    <div class="sp-rc-col">
      <h3>{{ section.settings.review_hl_1 }}</h3>
