      margin: 0 auto 25px auto;
      padding: 0;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider .sp-review-slider-grid {
      position: relative;
      margin: 0 auto;
      display: block;
      max-width: 1000px;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider .sp-review-slider-col * {
      text-align: center;
      color: #fff;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider .sp-review-slider-col h3 {
      font-weight: bold;
      text-transform: uppercase;
      padding: 0;
      margin: 0 0 10px 0;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider .sp-review-slider-col p {
      padding: 0;
      margin: 0;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider-prev-arrow {
        position: absolute;
        top: 50px;
        left: 10px;
        width: 30px;
        height: 30px;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider-next-arrow {
        position: absolute;
        top: 50px;
        right: 10px;
        width: 30px;
        height: 30px;
    }
  
    #sp-review-slider-{{ section.id }} .sp-review-slider-quote svg, 
