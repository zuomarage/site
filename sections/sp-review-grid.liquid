<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-review-{{ section.id }}.sp-review-wrap p,
  #sp-review-{{ section.id }}.sp-review-wrap p a {
    font-size: {{ section.settings.text_size }};
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-review-{{ section.id }}.sp-review-wrap h2 {
    font-size: {{ section.settings.headline_size }};
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }
  
  #sp-review-{{ section.id }}.sp-review-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-review-{{ section.id }} .sp-review {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-review-{{ section.id }} .sp-review .sp-review-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
    align-items: center;
    justify-content: center;
    align-content: start;
  }

  @media only screen and (min-width: 801px) {
    #sp-review-{{ section.id }} .sp-review .sp-review-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-review-{{ section.id }} .sp-review .sp-review-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-review-{{ section.id }} .sp-review .sp-review-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
    transition: all .5s;
  }

  #sp-review-{{ section.id }} .sp-review-col:hover .sp-review-cover {
    opacity: {{section.settings.cover_opacity | plus: 15 }}%;
  }

  #sp-review-{{ section.id }} .sp-review-col {
    position: relative;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  #sp-review-{{ section.id }} .sp-review-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    transition: all .5s;
  }

  #sp-review-{{ section.id }} .sp-review-col:hover .sp-review-img {
    transform: scale(1.2);
  }
  
  #sp-review-{{ section.id }} .sp-review-content {
    position: relative;
    z-index: 3;
    padding: 20px 10px;
    display: grid;
    justify-content: center;
    align-content: center;
    min-height: 300px;
  }

  #sp-review-{{ section.id }} .sp-review-content svg, 
  #sp-review-{{ section.id }} .sp-review-content svg g {
      fill: {{ section.settings.highlight_color }};
  }
  
  #sp-review-{{ section.id }} .sp-review p {
    margin: 0;
    padding: 0;
    text-align: center;
    color: {{ section.settings.text_color }};
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-review-{{ section.id }} .sp-review p:last-child {
    margin: 0;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-review-{{ section.id }}" class="sp-review-wrap">

<div class="sp-review">

  <div class="sp-review-grid">

    {% for block in section.blocks %}
      <div class="sp-review-col">
        <img class="sp-review-img" src="{{ block.settings.background_image | image_url: width: 2048 }}">
