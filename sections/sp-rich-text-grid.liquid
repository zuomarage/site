<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap p,
  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap p {
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap p:last-child {
    padding: 0;
    margin: 0;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h1,
  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h2,
  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h3,
  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h4 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h2 {
    font-size: {{ section.settings.headline_size | minus: 5 }}px;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h3 {
    font-size: {{ section.settings.headline_size | minus: 10 }}px;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h4 {
    font-size: {{ section.settings.headline_size | minus: 15 }}px;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap h5 {
    font-size: {{ section.settings.headline_size | minus: 20 }}px;
  }

  #sp-richtext-grid-{{ section.id }}.sp-richtext-grid-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }


  #sp-richtext-grid-{{ section.id }} .sp-richtext-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-richtext-grid-{{ section.id }}  .sp-richtext-grid .sp-richtext-grid-grid {
    display: grid;
    gap: {{ section.settings.grid_gap}}px;
    position: relative;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    #sp-richtext-grid-{{ section.id }} .sp-richtext-grid .sp-richtext-grid-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-richtext-grid-{{ section.id }} .sp-richtext-grid .sp-richtext-grid-grid {
      display: grid;
      grid-template-columns: 1fr;
    }
  }
  
</style>

<div id="sp-richtext-grid-{{ section.id }}" class="sp-richtext-grid-wrap">

<div class="sp-richtext-grid">

  <div class="sp-richtext-grid-grid">

    {% for block in section.blocks %}
      <div class="sp-richtext-grid-col">
        {{ block.settings.text }}
      </div>
      <!-- /.sp-richtext-grid-col -->

    {% endfor %}

  </div>
  <!-- /.sp-richtext-grid-grid -->
  
</div>
<!-- /.sp-richtext-grid -->

</div>
<!-- /.sp-richtext-grid-wrap -->

