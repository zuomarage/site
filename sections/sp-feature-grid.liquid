<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-feature-{{ section.id }}.sp-feature-wrap p,
  #sp-feature-{{ section.id }}.sp-feature-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-feature-{{ section.id }}.sp-feature-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }

  #sp-feature-{{ section.id }}.sp-feature-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }


  #sp-feature-{{ section.id }} .sp-feature {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-feature-{{ section.id }}  .sp-feature .sp-feature-grid {
    display: grid;
    align-items: center;
    gap: {{ section.settings.grid_gap}}px;
    position: relative;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    #sp-feature-{{ section.id }} .sp-feature .sp-feature-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-feature-{{ section.id }} .sp-feature .sp-feature-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-feature-{{ section.id }} .sp-feature .sp-feature-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
    transition: all .5s;
  }

  #sp-feature-{{ section.id }}  .sp-feature-col:hover .sp-feature-cover {
    opacity: {{section.settings.cover_opacity | plus: 15 }}%;
  }

  #sp-feature-{{ section.id }} .sp-feature-col {
    position: relative;
    padding: 0;
    overflow: hidden;
    aspect-ratio: {{ section.settings.aspect_ratio }};
  }

  #sp-feature-{{ section.id }} .sp-feature-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    transition: all .5s;
  }

  #sp-feature-{{ section.id }} .sp-feature-col:hover .sp-feature-img {
    transform: scale(1.2);
  }
  
  #sp-feature-{{ section.id }} .sp-feature-content {
    z-index: 3;
    padding: 15px;
    background-size: cover;
    background-position: center;
    position: absolute;
    bottom: 0;
    left: 0;
  }

  #sp-feature-{{ section.id }} .sp-feature h2 {
    margin: 0 0 5px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-shadow: 0 2px 4px rgba(0,0,0,0.25);
    text-align: left;
  }


  #sp-feature-{{ section.id }} .sp-feature p {
    margin: 0;
    padding: 0;
    text-align: left;
  }

  #sp-feature-{{ section.id }} .sp-feature a.sp-feature-cta {
    display: inline-block;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background-image: {{section.settings.button_background_color}};
    border-radius: {{ section.settings.button_border_radius }}px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
    transition: .25s all;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-feature-{{ section.id }}" class="sp-feature-wrap">

<div class="sp-feature">

  <div class="sp-feature-grid">

    {% for block in section.blocks %}
      <div class="sp-feature-col">
        <img class="sp-feature-img" src="{{ block.settings.background_image | image_url: width: 2048 }}">
        <div class="sp-feature-cover"></div>
        <div class="sp-feature-content">
          <h2>{{ block.settings.headline }}</h2>
          <p><a class="sp-feature-cta" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a></p>
        </div>
      </div>
      <!-- /.sp-feature-col -->

      {% endfor %}

  </div>
  <!-- /.sp-feature-grid -->
  
</div>
<!-- /.sp-feature -->

</div>
<!-- /.sp-feature-wrap -->

