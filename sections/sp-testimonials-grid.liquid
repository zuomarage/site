<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.cite_font | font_face }}

  #sp-testimonials-{{ section.id }}.sp-testimonials-wrap p {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-testimonials-{{ section.id }}.sp-testimonials-wrap p.sp-testimonials-cite {
    font-size: {{ section.settings.cite_size }}px;
    font-family: {{ section.settings.cite_font.family }}, {{ section.settings.cite_font.fallback_families }};
    font-weight: {{ section.settings.cite_font.weight }};
    line-height: 1.15;
  }

  #sp-testimonials-{{ section.id }}.sp-testimonials-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-testimonials-{{ section.id }} .sp-testimonials {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials .sp-testimonials-grid {
    display: grid;
    gap: 20px;
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
    z-index: 2;
    align-items: center;
    justify-content: center;
    align-content: start;
  }

  @media only screen and (min-width: 801px) {
    #sp-testimonials-{{ section.id }} .sp-testimonials .sp-testimonials-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-testimonials-{{ section.id }} .sp-testimonials .sp-testimonials-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials-col {
    position: relative;
    margin: 0;
    padding: 0;
    overflow: hidden;
    text-align: center;
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials-img-container {
    box-sizing: border-box;
    display: block;
    max-width: 100%;
    width: 50%;
    z-index: 1;
    border-radius: 50%;
    aspect-ratio: 1/1;
    text-align: center;
    margin: 10px;
    overflow: hidden;
    margin: 0 auto {{ section.settings.element_spacing }}px auto;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials-img {
    display: block;
    object-fit: cover;
    width: 100%;
    height: 100%;
    transition: all .5s ease;
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials-col:hover .sp-testimonials-img {
    transform: scale(1.2);
  }
  
  #sp-testimonials-{{ section.id }} .sp-testimonials-content {
    position: relative;
    z-index: 3;
    padding: 0;
    margin: 0;
    display: grid;
    justify-content: center;
    align-content: center;
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials-content svg, .sp-testimonials-content svg g {
      fill: {{ section.settings.highlight_color }};
  }
  
  #sp-testimonials-{{ section.id }} .sp-testimonials p {
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
    text-align: center;
    color: {{ section.settings.text_color }};
  }

  #sp-testimonials-{{ section.id }} .sp-testimonials p:last-child {
    margin: 0;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

