      {% if top != blank %}
        <p class="instafeed-top-{{ section.id }}">{{ top }}</p>
      {% endif %}
      {% if heading != blank %}
        <h2 class="instafeed-heading-{{ section.id }}">{{ heading }}</h2>
      {% endif %}
      {% if subheading != blank %}
        <div class="instafeed-subheading-{{ section.id }}">{{ subheading }}</div>
      {% endif %}
      <div class="instafeed-slider-{{ section.id }} swiper presets-{{ section.id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <a href="{{ block.settings.url }}" class="instafeed-slide-{{ section.id }} swiper-slide">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}lazy="loading"{% endif %}>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder' }}
              {% endif %}
            </a>
          {% endfor %}
        </div>
        <div class="swiper-button-prev instafeed-btn-prev-{{ section.id }}"></div>
        <div class="swiper-button-next instafeed-btn-next-{{ section.id }}"></div>
      </div>
    </div>
