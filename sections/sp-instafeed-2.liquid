  .instafeed-subheading-{{ section.id }} li,
  .instafeed-subheading-{{ section.id }} strong,
  .instafeed-subheading-{{ section.id }} a {
    margin: 0;
    font-size: {{ subheading_size | times: 0.85 }}px;
    color: {{ subheading_color }};
    line-height: {{ subheading_height }}%;
    text-transform: unset;
    text-align: {{ subheading_align }};
  }

  .instafeed-slider-{{ section.id }} {
    margin-top: {{ slider_mt | times: 0.75 | round: 0  }}px;
  }

  .instafeed-slide-{{ section.id }} {
    display: block !important;
    aspect-ratio: 1 / 1;
    border-radius: {{ image_radius }}px;
  }

  .instafeed-slide-{{ section.id }} img,
  .instafeed-slide-{{ section.id }} svg {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
  }

