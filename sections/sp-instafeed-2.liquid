{% assign slider_row = slider_row | plus: 0 %}
{% assign slider_row_tablet = slider_row | times: 0.5 %}
{% assign slider_row_tablet = slider_row | round: 0 %}
{% assign slider_row_mobile = slider_row_mobile | plus: 0 %}

<script>
  function instafeedSliderInit() {
    document.querySelector('.instafeed-slider-{{ section.id }}').classList.remove('presets-{{ section.id }}');
    new Swiper('.instafeed-slider-{{ section.id }}', {
      speed: 300,
      watchOverflow: false,
      {% if autoplay %}
       autoplay: {
         delay: {{ autoplay_speed | times: 1000 }},
       },
      {% endif %}
      navigation: {
        nextEl: '.instafeed-btn-next-{{ section.id }}',
        prevEl: '.instafeed-btn-prev-{{ section.id }}',
      },
      breakpoints: {
        320: {
          {% if section.blocks.size > slider_row_mobile and autoplay %}
            loop: true,
          {% endif %}
          slidesPerView: {{ slider_row_mobile }}.3,
          spaceBetween: {{ slider_gap_mobile }}
        },
        768: {
          {% if section.blocks.size > slider_row_tablet and autoplay %}
            loop: true,
          {% else %}
            loop: false,
          {% endif %}
          slidesPerView: {{ slider_row | times: 0.5 | round: 0 }}.3,
          spaceBetween: {{ slider_gap_mobile }}
        },
        992: {
          {% if section.blocks.size > slider_row and autoplay %}
            loop: true,
          {% else %}
            loop: false,
          {% endif %}
          slidesPerView: {{ slider_row }},
          spaceBetween: {{ slider_gap }},
          {% if section.blocks.size < slider_row or section.blocks.size == slider_row %}
            simulateTouch: false,
          {% endif %} 
        }
      }
    })
  }

  document.addEventListener('DOMContentLoaded', instafeedSliderInit);

  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', instafeedSliderInit);
     document.addEventListener('shopify:section:load', instafeedSliderInit);
  }
</script>

