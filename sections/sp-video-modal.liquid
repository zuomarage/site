<style>

  #sp-video-modal-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px ;
    border: 1px solid #ddd;
    border-radius: 10px;
    max-width: 600px;
    outline: none;
    border: none;
  }

  #sp-video-modal-{{ section.id }}:focus{
    outline: none;
    border: none;
}

  #sp-video-modal-{{ section.id }} .sp-video-modal-close {
    cursor: pointer;
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1;
  }

  #sp-video-modal-{{ section.id }} .sp-video-modal-close {
    fill: #fff;
      filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.25));
  }

  #sp-video-modal-{{ section.id }}.sp-video-modal {
    background-image: {{section.settings.background_color}};
    width: 100%;
  }

  #sp-video-modal-{{ section.id }} .sp-video-container {
    width: 100%;
  }

  #sp-video-modal-{{ section.id }} .sp-video-container video {
    width: 100%;
    display: block;
    margin: 0;
    padding: 0;
  }

</style>

<dialog id="sp-video-modal-{{ section.id }}" class="sp-video-modal sp-modal">

  <a class="sp-video-modal-close"><svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg></a>

  <div class="sp-video-container">
    {{
      section.settings.video
      | video_tag:
        image_size: '600x',
        playsinline: section.settings.video_inline,
        autoplay: section.settings.video_autoplay,
        loop: section.settings.video_loop,
        controls: section.settings.video_controls,
        muted: section.settings.video_muted
    }}
  </div>

</dialog>
<!-- /dialog -->

<script>
  const sai_vm_dialog_{{ section.index }} = document.querySelector(`#sp-video-modal-{{ section.id }}`);
  const sai_vm_dialog_close_{{ section.index }} = document.querySelector("#sp-video-modal-{{ section.id }} .sp-video-modal-close");

  // show -> handle after load
  document.addEventListener("DOMContentLoaded", function(){
    var sai_vm_show_{{ section.index }} = document.querySelectorAll("[href='{{ section.settings.modal_target }}']");

    // show
    for(var x=0; x<sai_vm_show_{{ section.index }}.length; x++) {
      sai_vm_show_{{ section.index }}[x].addEventListener("click", () => {
        sai_vm_dialog_{{ section.index }}.showModal();
        e.preventDefault();
      });
    }
  });

  // close
  sai_vm_dialog_close_{{ section.index }}.addEventListener("click", () => {
    sai_vm_dialog_{{ section.index }}.close();
    e.preventDefault();
  });

  // show in design mode
  if(Shopify) {
    if(Shopify.designMode) {
      sai_vm_dialog_{{ section.index }}.showModal();
    }
  }

  // show for url
  if(location.href.indexOf("{{ section.settings.modal_target }}") != -1) {
      sai_vm_dialog_{{ section.index }}.showModal();
  }
  
</script>

