<!-- this should have blocks for text headlines etc -->
<style>
  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-hl-with-pill-{{ section.id }}.sp-hl-with-pill-wrap p {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    color: {{ section.settings.text_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0 0 15px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-hl-with-pill-{{ section.id }}.sp-hl-with-pill-wrap p:last-child {
    padding: 0;
  }

  #sp-hl-with-pill-{{ section.id }}.sp-hl-with-pill-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    color: {{ section.settings.headline_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0 0 5px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-hl-with-pill-{{ section.id }}.sp-hl-with-pill-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-hl-with-pill-{{ section.id }} .sp-hl-with-pill-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

   #sp-hl-with-pill-{{ section.id }} .sp-hl-with-pill-box {
      display: grid;
     grid-template-columns: 10px 1fr;
     gap: 20px;
  }

  #sp-hl-with-pill-{{ section.id }} .sp-hl-with-pill-box span.sp-hl-with-pill-box-pb {
    width: 10px;
    height: 100%;
    background-color: {{ section.settings.pill_color }};
    border-radius: 2px;
    content: "";
    padding: 0;
    display: inline-block;
}

</style>


<div id="sp-hl-with-pill-{{ section.id }}" class="sp-hl-with-pill-wrap">
  <div class="sp-hl-with-pill-grid">
    
    <div class="sp-hl-with-pill-column">
      <div class="sp-hl-with-pill-box">
        <span class="sp-hl-with-pill-box-pb"></span>
        <div>
        {% if section.settings.headline %}<h2>{{ section.settings.headline }}</h2>{% endif %}
        {% if section.settings.text %}<p>{{ section.settings.text }}</p>{% endif %}
        </div>
      </div>
    </div>
    
  </div>
</div>

