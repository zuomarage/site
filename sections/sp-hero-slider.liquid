  <style>

    {{ section.settings.text_font | font_face }}
    {{ section.settings.headline_font | font_face }}

    #sp-hero-slider-{{ section.id }}.sp-hero-slider-wrap p,
    #sp-hero-slider-{{ section.id }}.sp-hero-slider-wrap p a {
      font-size: {{ section.settings.text_size }}px;
      font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
      font-weight: {{ section.settings.text_font.weight }};
      line-height: 1.15;
    }

    #sp-hero-slider-{{ section.id }}.sp-hero-slider-wrap h2 {
      font-size: {{ section.settings.headline_size }}px;
      font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
      font-weight: {{ section.settings.headline_font.weight }};
      line-height: 1.15;
    }
    
    #sp-hero-slider-{{ section.id }}.sp-hero-slider-wrap {
      background-image: {{ section.settings.background_color }};
      width: 100%;
    }
    
    #sp-hero-slider-{{ section.id }} .sp-hero-slider {
      position: relative;
      margin: 0 auto;
      max-width: {{ section.settings.max_width }}px;
      padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    }
  
    #sp-hero-slider-{{ section.id }} .sp-hero-slider .sp-hero-slider-grid {
      position: relative;
      margin: 0 auto;
      display: block;
    }
  
    #sp-hero-slider-{{ section.id }} .sp-hero-slider-prev-arrow {
        position: absolute;
        top: 50px;
        left: 10px;
        width: 30px;
        height: 30px;
    }
  
    #sp-hero-slider-{{ section.id }} .sp-hero-slider-next-arrow {
        position: absolute;
        top: 50px;
        right: 10px;
        width: 30px;
        height: 30px;
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block {
        position: relative;
        width: 100%;
        height: calc(100vh - 150px);
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: {{section.settings.cover_background}};
        opacity: {{section.settings.cover_opacity}}%;
        z-index: 1;
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block-text {
        position: absolute;
        bottom: 25px;
        left: 20px;
        width: calc(50vw - 20px);
        z-index: 2;
    }

   @media (max-width: 768px) {
        #sp-hero-slider-{{ section.id }} .sp-hero-slider-block-text {
            left: 20px;
            width: calc(100vw - 40px);
        }
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block-text h2 {
      color: {{ section.settings.text_color }};
      margin: 0 0 10px 0;
      padding: 0;
      text-align: left;
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block-text p {
      color: {{ section.settings.text_color }};
      font-weight: normal;
      margin: 0 0 10px 0;
      padding: 0;
      text-align: left;
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block-text p a, 
    #sp-hero-slider-{{ section.id }} .sp-hero-slider-block-text p a:visited {
    font-weight: bold;
    text-decoration: underline;
      color: {{ section.settings.text_color }};
  }
   
  #sp-hero-slider-{{ section.id }} .sp-hero-slider-carousel-links {
        position: absolute;
        bottom: 20px;
        right: 20px;
        padding: 0;
    }
  
    #sp-hero-slider-{{ section.id }} .sp-hero-slider-carousel-links a {
        display: inline-block;
        background-color: {{ section.settings.indicator_color }};
        width: 12px;
        height: 12px;
        border-radius: 50%;
        text-indent: -9999px;
        padding: 0;
        margin: 0 7.5px; 
        cursor: pointer;
        opacity: 0.25;
    }

    #sp-hero-slider-{{ section.id }} .sp-hero-slider-carousel-links a:hover {
      {{ section.settings.indicator_color }};
      opacity:1;
    }
  
    #sp-hero-slider-{{ section.id }} .sp-hero-slider-carousel-links a[active] {
      {{ section.settings.indicator_color }};
      opacity:1;
    }
  </style>

