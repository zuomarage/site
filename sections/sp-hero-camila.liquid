{% assign sec_id = section.id | slice: -8, 8  | replace: "-", "_" %}

{%- style -%}

img {
  max-width: 100%;
  height: auto;
}

.pw-container,
.pw-container-fluid {
  width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
  margin-right: auto;
  margin-left: auto;
}

@media (min-width: 576px) {
  .pw-container {
    max-width: 540px;
  }
}

@media (min-width: 750px) {
  .pw-container {
    max-width: 720px;
  }
}

@media (min-width: 992px) {
  .pw-container {
    max-width: 960px;
  }
}

@media (min-width: 1200px) {
  .pw-container {
    max-width: 1140px;
  }
}

@media (min-width: 1400px) {
  .pw-container {
    max-width: 1320px;
  }
}

.pw-btn, .rte a.pw-btn:not(.btn) {
  display: inline-block;
  text-decoration: none;
  text-align: center;
  background-color: #fff;
  border: none;
  border-radius: 0px;
  outline: none;
  color: #000;
  font-weight: 400;
  white-space: nowrap;
  text-transform: uppercase;
  padding: 20px 30px;
  line-height: 1;
  min-width: 225px;
  min-height: 44px;
  transition: all 0.25s;
  cursor: pointer;
  box-sizing: border-box;
  margin-right: 16px;
  margin-bottom: 10px;
  font-family: inherit;
}

.pw-btn:hover {
  text-decoration: none;
  opacity: 0.8 !important;
}

.pw-btn::after {
  display: none !important;
}

.pw-btn:focus {
  outline: none;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
}

.pw-btn.pw-btn-rounded,
.rte a.pw-btn.pw-btn-rounded:not(.btn) {
  border-radius: 50px;
}

@media only screen and (max-width: 749px) {
  .pw-btn, .rte a.pw-btn:not(.btn) {
    padding: 15px 25px;
    min-width: 180px;
  }
}

.pw-container,
.pw-container-fluid {
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

.pw-section__{{sec_id}} .pw-row {
  display: flex;
  flex-wrap: wrap;
  margin-right: calc(var(--pw-gutter-x, 15px) * -1);
  margin-left: calc(var(--pw-gutter-x, 15px) * -1);
}

.pw-section__{{sec_id}} .pw-row > * {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 100%;
  max-width: 100%;
  padding-right: var(--pw-gutter-x, 15px);
  padding-left: var(--pw-gutter-x, 15px);
}

@media (min-width: 750px) {
  .pw-section__{{sec_id}} .pw-col-md-6 {
    flex: 0 0 auto;
    width: 50%;
  }
}

@media (min-width: 992px) {
  .pw-section__{{sec_id}} .pw-col-lg-7 {
    flex: 0 0 auto;
    width: 58.33333333%;
  }
  .pw-section__{{sec_id}} .pw-col-lg-10 {
    flex: 0 0 auto;
    width: 83.33333333%;
  }
  .pw-section__{{sec_id}} .pw-offset-lg-1 {
    margin-left: 8.33333333%;
  }
}

@media (min-width: 1400px) {
  .pw-section__{{sec_id}} .pw-col-xxl-6 {
    flex: 0 0 auto;
    width: 50%;
  }
}

.pw-section__{{sec_id}} {
  --pw-gutter-x: 25px;
  position: relative;
  color: {{section.settings.text_color}};
  {% if section.settings.section_height == true %}
    min-height: 100vh;
  {% endif %}
  padding-top: {{section.settings.section_padding_top}}px;
  padding-bottom: {{section.settings.section_padding_bottom}}px;
  display: flex;
  align-items: center;
  line-height: 1.5;
}

.pw-section__{{sec_id}} img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  -o-object-fit: cover;
     object-fit: cover;
}

.pw-section__{{sec_id}}::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1;
}

.pw-section__{{sec_id}}.no-overlay::before {
  display: none;
  background-color: transparent;
  z-index: -1;
}

.pw-section__{{sec_id}} .pw-section-inner {
  position: relative;
  z-index: 1;
  text-align: left;
  {% if section.settings.text_align == "pw-col-lg-10 pw-offset-lg-1" %}
    text-align: center;
  {% endif %}
}

.pw-section__{{sec_id}} .pw-section-title::before,
.pw-section__{{sec_id}} .pw-section-title::after {
  display: none;
}

.pw-section__{{sec_id}} .pw-section-title {
  color: {{section.settings.text_color}};
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 25px;
  text-align: left;
  {% if section.settings.text_align == "pw-col-lg-10 pw-offset-lg-1" %}
    text-align: center;
  {% endif %}
}

.pw-section__{{sec_id}} .pw-section-text {
  display: inline-block;
  max-width: 840px;
}

.pw-section__{{sec_id}} .pw-section-text p,
.pw-section__{{sec_id}} .pw-section-text p a {
  color: {{section.settings.text_color}};
  margin-top: 0;
}

{% if section.settings.inherit_fonts == false %}
  .pw-btn, .rte a.pw-btn:not(.btn) {
    font-size: 18px;
  }
  .pw-section__{{sec_id}} h1.pw-section-title {
    font-size: 72px;
  }
  .pw-section__{{sec_id}} h2.pw-section-title {
    font-size: 56px;
  }
  .pw-section__{{sec_id}} h3.pw-section-title {
    font-size: 32px;
  }
  .pw-section__{{sec_id}} .pw-section-text p {
    font-size: 24px; margin-bottom: 24px;
  }
{% endif %}

@media only screen and (max-width: 749px) {
  .pw-section__{{sec_id}} {
    {% if section.settings.section_height_mobile == true %}
      min-height: 100vh;
    {% else %}
      min-height: auto;
    {% endif %}
    padding-top: {{section.settings.section_padding_top_mobile}}px;
    padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
  }
  {% if section.settings.inherit_fonts == false %}
    .pw-btn, .rte a.pw-btn:not(.btn) {
      font-size: 16px;
    }
    .pw-section__{{sec_id}} h1.pw-section-title {
      font-size: 50px;
    }
    .pw-section__{{sec_id}} h2.pw-section-title {
      font-size: 40px;
    }
   .pw-section__{{sec_id}}  h3.pw-section-title {
      font-size: 26px;
    }
    .pw-section__{{sec_id}} .pw-section-text p {
      font-size: 20px;
    }
  {% endif %}
}

{%- endstyle -%}

{% if section.settings.custom_css != blank %}
  {%- style -%}
  {{section.settings.custom_css}}
  {%- endstyle -%}
{% endif %}


<div class="pw-section__{{sec_id}} {% if section.settings.overlay_off == true %} no-overlay{% endif %}">
  {% if section.settings.background_image == blank %}
    <img src="https://cdn.shopify.com/s/files/1/0560/8249/7605/files/hero-camila-01.jpg" sizes="100vw"/>
  {% else %}
    <img srcset="
      {%- if section.settings.background_image.width >= 320 -%}{{ section.settings.background_image | img_url: '320x' }} 320w,{%- endif -%}
      {%- if section.settings.background_image.width >= 750 -%}{{ section.settings.background_image | img_url: '750x' }} 750w,{%- endif -%}
      {%- if section.settings.background_image.width >= 1500 -%}{{ section.settings.background_image | img_url: '1500x' }} 1500w,{%- endif -%}
      {%- if section.settings.background_image.width >= 2000 -%}{{ section.settings.background_image | img_url: '2000x' }} 2000w,{%- endif -%}"
      src="{{ section.settings.background_image | img_url: '1500x' }}"
      alt="{{ section.settings.background_image.alt | escape }}"
      sizes="100vw"
    >
  {% endif %}
  <div class="pw-container">
    <div class="pw-row__{{sec_id}}">
      <div class="{{ section.settings.text_align }}">
        <div class="pw-section-inner">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'heading' %}
              {% if block.settings.heading_text != blank %}
                <{{ block.settings.heading_tag }} class="pw-section-title" {{ block.shopify_attributes }}>
                {{ block.settings.heading_text | escape }}
                </{{ block.settings.heading_tag }}>
              {% endif %}

              {% when 'divider' %}
              <span class="pw-divider" style="--divider-color: {{block.settings.divider_color}}" {{ block.shopify_attributes }}></span>

              {% when 'text' %}
              {% if block.settings.section_text != blank %}
                <div class="pw-section-text" {{ block.shopify_attributes }}>
                  {{ block.settings.section_text }}
                </div>
              {% endif %}

              {% when 'buttons' %}
              <div class="pw-section-btns" {{ block.shopify_attributes }}>
                {% if block.settings.button_label_1 != blank %}
                  <a href="{{block.settings.button_link_1}}" 
                    class="pw-btn {% if block.settings.button_is_rounded == true %} pw-btn-rounded {% endif %}" 
                    style="background-color: {{block.settings.btn_bg_1}}; color: {{block.settings.btn_color_1}}">
                    {{block.settings.button_label_1}}
                  </a>
                {% endif %}
                {% if block.settings.button_label_2 != blank %}
                  <a href="{{block.settings.button_link_2}}" 
                    class="pw-btn {% if block.settings.button_is_rounded == true %} pw-btn-rounded {% endif %}" 
                    style="background-color: {{block.settings.btn_bg_2}}; color: {{block.settings.btn_color_2}}">
                    {{block.settings.button_label_2}}
                  </a>
                {% endif %}
              </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


