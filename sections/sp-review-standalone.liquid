<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.cite_font | font_face }}

  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p,
  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p {
    color: {{ section.settings.text_color }};
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    text-align: {{ section.settings.alignment }};
  }

  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p:last-child {
    margin: 0;
  }

  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p cite {
    font-size: {{ section.settings.cite_size }}px;
    font-family: {{ section.settings.cite_font.family }}, {{ section.settings.cite_font.fallback_families }};
    font-weight: {{ section.settings.cite_font.weight }};
    color: {{ section.settings.cite_color }};
    line-height: 1.15;
    font-style: normal;
  }

  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p cite {
    color: {{ section.settings.cite_color }};
  }

  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p svg, 
  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap p svg g {
    fill: {{ section.settings.highlight_color }};
  }
  
  #sp-sa-review-{{ section.id }}.sp-sa-review-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-sa-review-{{ section.id }} .sp-sa-review {
    position: relative;
    margin: 0 auto;
    max-width: 100%;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-sa-review-{{ section.id }} .sp-sa-review-container {
    display: grid;
    align-items: center;
    position: relative;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0;
    z-index: 4;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

