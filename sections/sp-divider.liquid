<style>
  
  #sp-divider-{{ section.id }}.sp-divider-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  

  #sp-divider-{{ section.id }}.sp-divider-wrap {
    position: relative;
    margin: 0 auto;
    max-width: 100%; 
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-divider-{{ section.id }} .sp-divider {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0;
    text-align: center;
  }

  #sp-divider-{{ section.id }} .sp-divider-pill {
    display: inline-block;
    background-image: {{ section.settings.divider_color }};
    width: {{ section.settings.divider_width }}%;
    height: {{ section.settings.divider_height }}px;
    border-radius: {{ section.settings.divider_radius }}px;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-divider-{{ section.id }}" class="sp-divider-wrap">
  <div class="sp-divider">
    <div class="sp-divider-pill"></div>
  </div>
</div>

