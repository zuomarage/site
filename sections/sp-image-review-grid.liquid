<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-image-review-{{ section.id }}.sp-image-review-wrap p,
  #sp-image-review-{{ section.id }}.sp-image-review-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-image-review-{{ section.id }}.sp-image-review-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }
  
  #sp-image-review-{{ section.id }}.sp-image-review-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-image-review-{{ section.id }} .sp-image-review {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-image-review-{{ section.id }} .sp-image-review .sp-image-review-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
  }

  @media only screen and (min-width: 801px) {
    #sp-image-review-{{ section.id }} .sp-image-review .sp-image-review-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
      
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-image-review-{{ section.id }} .sp-image-review .sp-image-review-grid {
      display: grid;
      grid-template-columns: 1fr;
      
    }
  }

  #sp-image-review-{{ section.id }} .sp-image-review-col {
    box-sizing: border-box;
    position: relative;
    margin: 0;
    padding: 0 0 15px 0;
    overflow: hidden;
    border-radius: 5px;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
    transition: .25s all ease;
  }

  #sp-image-review-{{ section.id }} .sp-image-review-col:hover {
    transform: scale(1.01);   
  }
  
  #sp-image-review-{{ section.id }} .sp-image-review-col img {
    width: 100%;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    object-fit: cover;
    aspect-ratio: {{ section.settings.media_aspect_ratio }};
    transition: all .5s;
  }

  #sp-image-review-{{ section.id }} .sp-image-review-col svg, 
  #sp-image-review-{{ section.id }} .sp-image-review-col svg g {
      fill: {{ section.settings.highlight_color }};
  }

  #sp-image-review-{{ section.id }} .sp-image-review-col h2 {
    margin: 0;
    text-align: left;
    color: {{section.settings.text_color}};
    padding: 10px 15px 0 15px;
  }
  
  #sp-image-review-{{ section.id }} .sp-image-review-col p {
    margin: 0;
    text-align: left;
    color: {{section.settings.text_color}};
    padding: 10px 15px 0 15px;
  }

  #sp-image-review-{{ section.id }} .sp-image-review-col p small {
    font-size: 12px;
    color: {{section.settings.text_color}};
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-image-review-{{ section.id }}" class="sp-image-review-wrap">

<div class="sp-image-review">

  <div class="sp-image-review-grid">

    {% for block in section.blocks %}
      <div class="sp-image-review-col">
          <img class="sp-image-review-img" src="{{ block.settings.image | image_url: width: 500 }}">
          <h2>{{ block.settings.cite }}</h2>
          <p>
