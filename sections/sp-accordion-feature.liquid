<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-acfg-{{ section.id }}.sp-acfg-feature-wrap p,
  #sp-acfg-{{ section.id }}.sp-acfg-feature-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-acfg-{{ section.id }}.sp-acfg-feature-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }

  #sp-acfg-{{ section.id }}.sp-acfg-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-acfg-{{ section.id }} .sp-acf-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  @media only screen and (max-width: 800px) {
    #sp-acfg-{{ section.id }} .sp-acf-grid {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }
  }

  #sp-acfg-{{ section.id }}  .sp-acf-grid .sp-acfg-grid {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
    gap: {{ section.settings.gap }}px;
  }

  @media only screen and (max-width: 800px) {
    #sp-acfg-{{ section.id }}  .sp-acf-grid .sp-acfg-grid {
      gap: {{ section.settings.mobile_gap }}px;
    }
  }

  #sp-acfg-{{ section.id }} .sp-acfg-col {
    flex: 1;
    position: relative;
    overflow: hidden;
    transition: .25s all ease;
    height: {{ section.settings.height }}px;
    padding: 0;
  }

  @media only screen and (max-width: 800px) {
    #sp-acfg-{{ section.id }} .sp-acfg-col {
      height: {{ section.settings.mobile_height }}px;
    }
  }

  #sp-acfg-{{ section.id }} .sp-acfg-col:hover {
    flex-basis: 25vw;
  }

  @media only screen and (max-width: 800px) {
    #sp-acfg-{{ section.id }} .sp-acfg-col:hover {
      flex-basis: 50vw;
    }
  }
  
  #sp-acfg-{{ section.id }} .sp-acfg-feature .sp-acfg-feature-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
    transition: all .5s;
    border-radius: {{ section.settings.border_radius }}px;
  }

  #sp-acfg-{{ section.id }}  .sp-acfg-col:hover .sp-acfg-feature-cover {
    opacity: {{section.settings.cover_opacity | plus: section.settings.cover_opacity_increase }}%;
  }

  #sp-acfg-{{ section.id }} .sp-acfg-feature-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    transition: all .5s;
    border-radius: {{ section.settings.border_radius }}px;
  }

  #sp-acfg-{{ section.id }}  .sp-acfg-col:hover ..sp-acfg-feature-img {
    backdrop-filter: blur(25px);
  }

  #sp-acfg-{{ section.id }} .sp-acfg-feature-col:hover .sp-acfg-feature-img {
    transform: scale(1.2);
  }
  
  #sp-acfg-{{ section.id }} .sp-acfg-feature-content {
    z-index: 3;
    padding: 15px;
    background-size: cover;
    background-position: center;
    position: absolute;
    bottom: 0;
    left: 0;
  }

  #sp-acfg-{{ section.id }} .sp-acfg-grid:hover .sp-acfg-feature-content {
    display: none;
  }

  #sp-acfg-{{ section.id }} .sp-acfg-grid:hover .sp-acfg-col:hover .sp-acfg-feature-content{
    display: block;
  }

  #sp-acfg-{{ section.id }} .sp-acfg-feature h2 {
    margin: 0 0 5px 0;
    padding: 0;
    color: {{section.settings.text_color}};
    text-shadow: 0 2px 4px rgba(0,0,0,0.25);
    text-align: left;
    white-space: nowrap;
  }


  #sp-acfg-{{ section.id }} .sp-acfg-feature p {
    margin: 0;
    padding: 0;
    text-align: left;
  }

  #sp-acfg-{{ section.id }} .sp-acfg-feature a.sp-acfg-feature-cta {
    display: inline-block;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background-image: {{section.settings.button_background_color}};
    border-radius: {{ section.settings.button_border_radius }}px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
    transition: .25s all;
    white-space: nowrap;
  }
  
  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-acfg-{{ section.id }}" class="sp-acfg-wrap">

<div class="sp-acf-grid">

  <div class="sp-acfg-grid">

    {% for block in section.blocks %}
      <div class="sp-acfg-col">
        <div class="sp-acfg-feature">
          <img class="sp-acfg-feature-img" src="{{ block.settings.background_image | image_url: width: 2048 }}">
          <div class="sp-acfg-feature-cover"></div>
          <div class="sp-acfg-feature-content">
            <h2>{{ block.settings.headline }}</h2>
            <p><a class="sp-acfg-feature-cta" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a></p>
          </div>
        </div>
      </div>
      <!-- /.sp-acfg-col -->

    {% endfor %}

  </div>
  <!-- /.sp-acfg-grid -->
  
</div>
<!-- /.sp-acf-grid -->

</div>
<!-- /.sp-acfg-wrap -->

