        </div>
        <div class="sp-cd-grid-item">
          <div class="sp-cd">
            <span id="sp-cd-{{ section.id }}-seconds" class="sp-timer">00</span>
            <span class="sp-label">seconds</span>
          </div>
        </div>
      </div>
    </section>
  
