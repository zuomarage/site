<style>

  {{ section.settings.text_font | font_face }}

  #sp-slideshow-{{ section.id }}.sp-slideshow-wrap p,
  #sp-slideshow-{{ section.id }}.sp-slideshow-wrap a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-slideshow-{{ section.id }}.sp-slideshow-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-slideshow-{{ section.id }} .sp-slideshow {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  .sp-slideshow .sp-slideshow-grid {
    position: relative;
    margin: 0 auto;
    display: block;
  }

  .sp-slideshow-prev-arrow {
      position: absolute;
      top: 50px;
      left: 10px;
      width: 30px;
      height: 30px;
  }

  .sp-slideshow-next-arrow {
      position: absolute;
      top: 50px;
      right: 10px;
      width: 30px;
      height: 30px;
  }

  .sp-slideshow-block {
      position: relative;
      width: 100%;
      height: calc(100vh - 150px);
      border-bottom: solid 40px {{ section.settings.caption_background_color }};
  }
  
  .sp-slideshow-block-text {
    position: absolute;
    bottom: -40px;
    left: 10px;
    width: calc(50vw - 20px);
    z-index: 2;
  }

 @media (max-width: 768px) {
      .sp-slideshow-block-text {
          left: 20px;
          width: calc(100vw - 40px);
      }
  }

.sp-slideshow-block-text p {
    color: {{ section.settings.text_color }};
    font-weight: normal;
    margin: 0 0 10px 0;
    padding: 0;
    text-align: left;
  }

.sp-slideshow-block-text p a, .sp-slideshow-block-text p a:visited {
  font-weight: bold;
  text-decoration: underline;
    color: {{ section.settings.text_color }};
}

 
  
  .sp-slideshow-carousel-links {
      position: absolute;
      bottom: 5px;
      right: 10px;
      padding: 0;
  }

  #sp-slideshow-{{ section.id }} .sp-slideshow-carousel-links a {
      display: inline-block;
      background-color: {{ section.settings.indicator_color }};
      width: 12px;
      height: 12px;
      border-radius: 50%;
      text-indent: -9999px;
      padding: 0;
      margin: 0 7.5px; 
      cursor: pointer;
      opacity: 0.25;
  }

  #sp-slideshow-{{ section.id }} .sp-slideshow-carousel-links a:hover {
      {{ section.settings.indicator_color }};
      opacity:1;
  }

  #sp-slideshow-{{ section.id }} .sp-slideshow-carousel-links a[active] {
      {{ section.settings.indicator_color }};
    opacity:1;
  }

  .sp-slideshow .sp-slideshow-col .sp-slideshow-big-quote {
    text-align: left;
    padding: 0;
    margin: 0 0 15px 0;
  }

  .sp-slideshow .sp-slideshow-col .sp-slideshow-big-quote svg {
    height: 20px;
    width: 20px;
  }

  .sp-slideshow-big-quote svg, .sp-slideshow-big-quote svg g {
    fill: #fff;
  }
</style>

<div id="sp-slideshow-{{ section.id }}" class="sp-slideshow-wrap">

<div class="sp-slideshow">

<div class="sp-slideshow-grid">
  <div class="sp-slideshow-col">

    <div id="sp-slideshow-carousel-{{ section.id }}" class="sp-slideshow-carousel">
      {% for block in section.blocks %}
        <div class="sp-slideshow-block" style="background: url({{ block.settings.slide_image | image_url: width: 1024 }}) no-repeat 0 0; background-size: cover; background-position: center center;">
          <div class="sp-slideshow-block-text">
            <p>{{block.settings.slide_text}} <a href="{{block.settings.cta_link}}">{{block.settings.cta_text}}</a></p>

          </div>
        </div>
      {% endfor %}
    </div>
    <!-- /.sp-slideshow-carousel -->

    <div id="sp-slideshow-carousel-links-{{ section.id }}" class="sp-slideshow-carousel-links">
    {% for block in section.blocks %}
      <a data-index="{{ forloop.index | minus: 1 }}"></a>
    {% endfor %}
    </div>

    
    
  </div>
  <!-- /.sp-slideshow-col -->
</div>
<!-- /.sp-slideshow-container -->

</div>
<!-- /.sp-slideshow -->

</div>
