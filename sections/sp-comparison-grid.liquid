<style>

  {{ section.settings.text_font | font_face }}

  #sp-comp-{{ section.id }}.sp-comp-wrap div,
  #sp-comp-{{ section.id }}.sp-comp-wrap p,
  #sp-comp-{{ section.id }}.sp-comp-wrap th,
  #sp-comp-{{ section.id }}.sp-comp-wrap td,
  #sp-comp-{{ section.id }}.sp-comp-wrap a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  @media only screen and (max-width: 800px) {
    #sp-comp-{{ section.id }}.sp-comp-wrap div,
    #sp-comp-{{ section.id }}.sp-comp-wrap p,
    #sp-comp-{{ section.id }}.sp-comp-wrap th,
    #sp-comp-{{ section.id }}.sp-comp-wrap td,
    #sp-comp-{{ section.id }}.sp-comp-wrap a {
      font-size: {{ section.settings.mobile_text_size }}px;
    }
  }

  #sp-comp-{{ section.id }}.sp-comp-wrap {
    background-image: {{section.settings.background_color}};
    width: 100%;
  }
  
  #sp-comp-{{ section.id }} .sp-comp {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-comp-{{ section.id }} .sp-comp h2 {
    text-align: center;
    color: {{ section.settings.text_color }};
    font-weight: bold;
    max-width: 1000px;
    margin: 0 auto 25px auto;
    padding: 0;
  }

  .sp-comp .sp-comp-grid {
    position: relative;
    margin: 0 auto;
    display: block;
    max-width: 1000px;
  }

  .sp-comp-row0, .sp-comp-row {
    display: grid;
    grid-template-columns: 3fr 150px 150px;
    border-bottom: 1px solid {{ section.settings.border_color }};
    gap: 0;
  }

  .sp-comp-row0 *, .sp-comp-row * {
    color: {{ section.settings.text_color }};
  }

  @media only screen and (max-width: 800px) {
    .sp-comp-row0, .sp-comp-row {
      display: grid;
      grid-template-columns: 3fr 100px 100px;
      border-bottom: 1px solid {{ section.settings.border_color }};
      gap: 0;
    }
  }

  .sp-comp-row0>div, .sp-comp-row>div {
    padding: {{ section.settings.cell_padding }}px;
  }

  .sp-comp-row0>div:nth-child(1), .sp-comp-row>div:nth-child(1) {
    text-align: left;
  }

  .sp-comp-row0>div:nth-child(2) {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    font-weight: bold !important;
  }

  .sp-comp-row0>div:nth-child(2), .sp-comp-row>div:nth-child(2) {
    text-align: center;
    background-color: {{ section.settings.highlight_background }};
  }

  .sp-comp-row0>div:nth-child(3), .sp-comp-row>div:nth-child(3) {
    text-align: center;
  }

  .sp-comp .sp-comp-check, .sp-comp .sp-comp-x {
    width: 20px;
    height: 20px;
  }

  .sp-comp .sp-comp-check g {
    fill: {{ section.settings.check_color }} !important;
  }

  .sp-comp .sp-comp-x g {
    fill: {{ section.settings.x_color }} !important;
  }

  @media only screen and (max-width: 800px) {

  }
</style>

