<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-review-masonry-{{ section.id }}.sp-review-masonry-wrap p,
  #sp-review-masonry-{{ section.id }}.sp-review-masonry-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    line-height: 1.15;
  }

  #sp-review-masonry-{{ section.id }}.sp-review-masonry-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    line-height: 1.15;
  }
  
  #sp-review-masonry-{{ section.id }}.sp-review-masonry-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-review-masonry-{{ section.id }} .sp-review-masonry {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry .sp-review-masonry-grid {
    display: grid;
    gap: {{ section.settings.grid_gap }}px;
    position: relative;
    width: 100%;
    z-index: 2;
    {% if section.settings.columns == "1" %}
    grid-template-columns: 1fr;
    {% endif %}
    {% if section.settings.columns == "2" %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    {% if section.settings.columns == "3" %}
    grid-template-columns: 1fr 1fr 1fr;
    {% endif %}
    gap: {{ section.settings.grid_gap }}px;
  }


  @media only screen and (max-width: 800px) {
    #sp-review-masonry-{{ section.id }} .sp-review-masonry .sp-review-masonry-grid {
      display: grid;
      {% if section.settings.mobile_columns == "1" %}
        grid-template-columns: 1fr;
      {% endif %}
    }
  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry-col {

  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry-item {
    box-sizing: border-box;
    position: relative;
    margin: 0 0 {{ section.settings.grid_gap }}px 0;
    padding: 0 0 15px 0;
    border-radius: 5px;
    box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
    transition: .25s all ease;
  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry-item:hover {
    transform: scale(1.01);   
  }
  
  #sp-review-masonry-{{ section.id }} .sp-review-masonry-item img,
  #sp-review-masonry-{{ section.id }} .sp-review-masonry-item video {
    width: 100%;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry-col svg, 
  #sp-review-masonry-{{ section.id }} .sp-review-masonry-col svg g {
      fill: {{ section.settings.highlight_color }};
  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry-col h2 {
    margin: 0;
    text-align: left;
    color: {{section.settings.text_color}};
    padding: 10px 15px 0 15px;
  }
  
  #sp-review-masonry-{{ section.id }} .sp-review-masonry-col p {
    margin: 0;
    text-align: left;
    color: {{section.settings.text_color}};
    padding: 10px 15px 0 15px;
  }

  #sp-review-masonry-{{ section.id }} .sp-review-masonry-col p small {
    font-size: 12px;
    color: {{section.settings.text_color}};
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-review-masonry-{{ section.id }}" class="sp-review-masonry-wrap">

<div class="sp-review-masonry">

  <div class="sp-review-masonry-grid">

    {% for block in section.blocks %}

      {% assign break = forloop.length | divided_by: section.settings.columns | plus: 1 %}
      {% assign break_2 = forloop.length | divided_by: section.settings.columns | times: 2 | plus: 1 %}

      {% if forloop.index == 1 %}
        <div class="sp-review-masonry-col">
      {% endif %}

      {% if forloop.index == break %}
        </div><div class="sp-review-masonry-col">
      {% endif %}

      {% if forloop.index == break_2 %}
        </div><div class="sp-review-masonry-col">
      {% endif %}

      <div class="sp-review-masonry-item">

        {% if block.type == 'video' %}
          
          {{
              block.settings.video
              | video_tag:
                image_size: '1100x',
                playsinline: block.settings.video_inline,
                autoplay: block.settings.video_autoplay,
                loop: block.settings.video_loop,
                controls: block.settings.video_controls,
                muted: block.settings.video_muted
            }}
        
        {% endif %}
        {% if block.type == 'image' %}
          {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url: width: 600 }}">
          {% endif %}
        {% endif %}
        
          <h2>{{ block.settings.cite }}</h2>
          <p>
